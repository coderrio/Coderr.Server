{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@/*": [ "ClientApp/*" ]
    },
    "sourceMap": true,
    "strict": true,
    //"skipDefaultLibCheck": true,
    "strictNullChecks": false,
    "target": "es5",
    "types": [ "webpack-env" ]

  },
  "include": [
    "ClientApp/**/*.ts", 
    "wwwroot/js/service-worker.js", "../Live/Coderr.Server.Live.Boot/Jobs/TenantAnalyzerBackgroundJobManager.cs"
  ],
  "exclude": [
    "bin",
    "node_modules"//,
//    "ClientApp/dto/**/*.ts"
  ]
}
